<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
			<th>Title&nbsp;&nbsp;</th>
      <th>Score&nbsp;&nbsp;</th>
      <th>Words&nbsp;&nbsp;</th>
      <th>User&nbsp;&nbsp;</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.score %></td>
        <td><%= post.words %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
