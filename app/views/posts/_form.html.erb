<%= form_for @post, :html => {:multipart => true} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
<div class="row">
		<div class="post">
			<div class="panel panel-primary">
				<div class="panel-heading"><h3 class="panel-title"> Create a new post</h3>

				</div>


				<div style="padding:5px;">
					<div class="field">
					  <%= f.label 'Upload a picture:' %><br>
					  <%= f.file_field :picture %>
					</div>
				<%= f.label 'Title (optional):' %><br>
			    <%= f.text_field :title %><br>
			    <%= f.label 'Link (optional):' %><br>
				<%= f.text_field :link %><Br>
		  
		  
			    <%= f.label 'Description (optional):' %><br>
		     	<%= f.text_area :words, class: 'input-block-level' %>
		  
				<Br>


					<div class="field">
					<%= f.label 'Post as:' %><br>
					<% if signed_in?  %>
					<%= f.select :user_id, [[session[:user_name],session[:user_id]], ['Anonymous',2]] %>
					<% else %>
					<%= f.select :user_id, [['Anonymous',2]] %>
					<% end %>
					</div>

				   <div class="actions">
					<%= f.submit %>
				   </div>
				</div>
		<br>
<%= link_to 'Back', '/' %>
<% end %>

</div>

			</div>